{
  "env": {
    "node": true,
    "es6": true
  },
  // 0=off, 1=warning (no fail), 2=error (exit code of 1)
  "rules": {
    "brace-style": [2, "stroustrup", { "allowSingleLine": false }],
    "default-case": 2,
    "dot-notation": 0,
    "no-eq-null": 2,
    "no-floating-decimal": 2,
    "no-inline-comments": 0,
    "no-nested-ternary": 2,
    "no-param-reassign": 0,
    "no-process-exit": 0,
    "no-self-compare": 2,
    "no-shadow": 0,
    "no-throw-literal": 2,
    "no-undefined": 0,
    "no-void": 2,
    "quotes": [1, "double"],
    "space-after-keywords": 2,
    "strict": 0,
    "wrap-iife": [2, "outside"]
  }
}
